extends layout

block content
  h1= title
  p Welcome to #{title}

  div(class="container table-responsive-sm")
    div(class='row')
      table(class='table table-primary table-striped table-hover table-bordered border-primary') 
        thead(class='table-dark')
          each label in ['_id','entity_number','customer_ref_uid','content_path','trigger_date']
            th= label
        tbody(class='table-group-divider')
          each item, i in msg 
            tr
              td(class='td')=item._id
              td=item.arrangement.entity_number
              td=item.bank_doc.customer_ref_uid
              td
                a(href=item.content_path) #{item.tags[0]}
              td(class='table-light date')=moment(item.record_trigger_date).format("YYYY-MM-DD")
 
